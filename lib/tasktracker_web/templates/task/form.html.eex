<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group  d-none">
    <%= label f, :owner_id, class: "control-label"%>
    <%= text_input f, :owner_id, class: "form-control", value: @current_user.id%>
    <%= error_tag f, :owner_id %>
  </div>

  <div class="form-group col-2">
    <%= label f, :status_id, "Status", class: "control-label" %>
    <%= select f, :status_id, @allStatuses, class: "form-control" %>
    <%= error_tag f, :status_id %>
  </div>  

  <div class="form-group col-2">
    <%= label f, :title, class: "control-label" %>
    <%= text_input f, :title, class: "form-control", required: true%>
    <%= error_tag f, :title %>
  </div>

  <div class="form-group col-12">
    <%= label f, :details, class: "control-label" %>
    <%= textarea f, :details, class: "form-control" %>
    <%= error_tag f, :details %>
  </div>

  <div class="form-group col-4">
    <%= label f, :assignee_id, "Assignee", class: "control-label" %>
    <%= select f, :assignee_id, @all_managees, class: "form-control" %>
    <%= error_tag f, :assignee_id %>
  </div>

  <div class="form-group col-2">
    <%= label f, :timespent, "Time spent (will rounded up to the nearest 15 minutes)", class: "control-label col-form-label-sm" %>
    <%= number_input f, :timespent, value: @timespent, class: "form-control" %>
    <%= error_tag f, :timespent %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
